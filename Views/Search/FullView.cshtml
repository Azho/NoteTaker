@model NoteTakerApplication.ViewModels.ViewAuthorViewModel

@{
    ViewBag.Title = "FullView";
}


<div>
    <h2>About @Model.UserName</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            About the Author:
        </dt>
        @if (Model.About == null)
        {
            <dd>@Model.UserName has not set a description yet.</dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.About)
            </dd>
        }
    </dl>
    <dl class="dl-horizontal">
        <dt>
            <text>Also by </text>@Model.UserName<text>:</text>
        </dt>

        @foreach (var item in Model.UserNotes)
        {

            <dd>
                @item.Title<text> (saved by @item.TimesSaved other users)</text>
            </dd>
        }
    </dl>
</div>


<hr />

<p>
    @Html.ActionLink("Back", "Index")
</p>
