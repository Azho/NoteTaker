@model IEnumerable<NoteTakerApplication.Models.Shorthand>

@{
    ViewBag.Title = "Index";
}

<h2>Shorthands Manager</h2>
<p>Make sure to double check your shorthand before publishing it for peer review.</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tags)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimesSaved)
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @if (item.Author == this.User.Identity.Name)
                {
                    <p>Me</p>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Author)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tags)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimesSaved)
            </td>
            <td>
                @if (item.Published == true)
                {
                    <p>Published</p>
                }
                else
                {
                    <p>Private</p>
                }
            </td>
            <td>



                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    <tr>
        <td colspan="5">
            @Html.ActionLink("New Shorthand", "Create")
        </td>
    </tr>

</table>


<div>
    <table>
        @foreach (var item in Model)
        {
            <tr class="authorShorthand">
                <td>@item.KeybindList</td>
            </tr>
        }
    </table>
</div>